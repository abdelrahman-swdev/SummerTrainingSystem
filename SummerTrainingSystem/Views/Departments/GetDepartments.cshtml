@model List<Department>
@{
    ViewData["Title"] = "All Departments";
}

<div class="container mt-5">
    <row>
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5">Departments</h1>
                <a class="btn btn-outline-primary" asp-controller="Departments" asp-action="CreateDepartment">
                    Create Department <i class="fas fa-plus-circle"></i>
                </a>
            </div>
            <hr />

            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    No Departments to show.
                </div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center border-2 mt-4">
                    <table class="table">
                        <tbody class="">
                            @foreach (var department in Model)
                            {
                                <tr>
                                    <td class="p-3"><h5 class="card-title">@department.Name</h5></td>
                                    <td class="p-3"><h5 class="card-title">@department.Abbreviation</h5></td>
                                    <td class="p-3">
                                        <button id="@department.Id" class="btn btn-danger" onclick=deleteDepartment('@department.Id')>
                                            <i class="fas fa-trash"></i>
                                            <div class="spinner-border spinner-border-sm d-none" role="status" id="@department.Id">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </button>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </row>
</div>

<script src="~/js/Departments.js"></script>